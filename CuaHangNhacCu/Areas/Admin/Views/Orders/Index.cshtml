@model CuaHangNhacCu.Areas.Admin.Models.OrderIndexViewModel
@using System.ComponentModel.DataAnnotations
@using System.Reflection
@{
    ViewData["Title"] = "Quản lý Đơn đặt hàng";
    var allStatuses = (CuaHangNhacCu.Models.OrderStatus[])Enum.GetValues(typeof(CuaHangNhacCu.Models.OrderStatus));

    string GetDisplayName(Enum enumValue)
    {
        return enumValue.GetType()
                        .GetMember(enumValue.ToString())
                        .First()
                        .GetCustomAttribute<DisplayAttribute>()?
                        .GetName() ?? enumValue.ToString();
    }
}

<h1>@ViewData["Title"]</h1>

<ul class="nav nav-tabs mb-3">
    @foreach (var status in allStatuses)
    {
        <li class="nav-item">
            <a class="nav-link @(Model.CurrentStatus == status ? "active" : "")"
               asp-action="Index"
               asp-route-status="@status">
                @GetDisplayName(status)
            </a>
        </li>
    }
</ul>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Orders.Count == 0)
        {
            <tr>
                <td colspan="6" class="text-center">Không có đơn hàng nào ở trạng thái này.</td>
            </tr>
        }

        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@(order.User?.FullName ?? "N/A")</td>
                <td>@order.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                <td>@order.Total.ToString("N0") VNĐ</td>
                <td>
                    <span class="badge bg-info">@GetDisplayName(order.Status)</span>
                </td>
                <td style="min-width: 250px;">
                    <form asp-action="UpdateStatus" method="post" class="d-inline-flex">
                        <input type="hidden" name="orderId" value="@order.Id" />

                        <select name="newStatus" class="form-select form-select-sm" style="width: auto;">

                            @foreach (var status in allStatuses)
                            {
                                @if (order.Status == status)
                                {
                                    <option value="@status" selected>
                                        @GetDisplayName(status)
                                    </option>
                                }
                                else
                                {
                                    <option value="@status">
                                        @GetDisplayName(status)
                                    </option>
                                }
                            }
                        </select>

                        <button type="submit" class="btn btn-sm btn-primary ms-2">Lưu</button>
                    </form>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info ms-2">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>