@using Microsoft.AspNetCore.Identity
@using CuaHangNhacCu.Models
@inject UserManager<User> UserManager

@{
    User? currentUser = null;
    if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        currentUser = await UserManager.GetUserAsync(User);
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <script>
        (function () {
            var isCollapsed = localStorage.getItem("sidebar-collapsed") === "true";
            if (isCollapsed) {
                document.documentElement.classList.add("sidebar-collapsed");
            } else {
                document.documentElement.classList.remove("sidebar-collapsed");
            }
            document.documentElement.classList.add("sidebar-ready");
        })();
    </script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div id="sidebar" class="sidebar d-flex flex-column p-3">
        <a href="/" class="d-flex align-items: center mb-3 mb-md-0 me-md-auto text-decoration-none">
            <span class="brand-title">Trang quản lý</span>
        </a>

        <div class="sidebar-heading">Menu</div>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a asp-controller="Dashboard" asp-action="Index" 
                class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "") ">
                    <i class="bi bi-grid-fill"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-muted">
                    <i class="bi bi-box"></i> Sản phẩm
                </a>
            </li>
            <li>
                <a asp-controller="Brands" asp-action="Index"
                   class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Brands" ? "active" : "") ">
                    <i class="bi bi-badge-tm" ></i> Thương hiệu
                </a>
            </li>
            <li>
                <a asp-controller="Categories" asp-action="Index"
                   class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categories" ? "active" : "") ">
                    <i class="bi bi-music-note-list"></i> Danh mục
                </a>
            </li>
            <li>
                <a asp-controller="ExportFile" asp-action="Index" class="nav-link">
                    <i class=""></i> Xuat File
                </a>
            </li>
            <li>
                <a asp-controller="Orders" asp-action="Index"
                   class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "") ">
                    <i class="bi bi-cart-fill"></i> Đơn hàng
                </a>
            </li>
            <li>
                <a asp-controller="Users" asp-action="Index"
                   class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "") ">
                    <i class="bi bi-people-fill"></i> Người dùng
                </a>
            </li>
        </ul>
        <hr>
        <a href="#" class="nav-link text-dark">
            <i class="bi bi-gear"></i> Settings
        </a>
    </div>

    <div id="content" class="content">
        <div class="header d-flex justify-content-between align-items-center">

            <div class="header-left-group">
                <button class="btn btn-light" type="button" id="sidebarToggle" title="Toggle sidebar">
                    <i class="bi bi-list fs-5"></i>
                </button>

                <div class="search-bar">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" class="form-control" placeholder="Search Anything..." />
                </div>
            </div>

            <div class="header-controls">
                <a asp-controller="Profile" asp-action="Index" class="text-decoration-none text-dark">
                    <div class="user-profile d-flex align-items-center gap-2">
                        <img src="https://avatar.iran.liara.run/public/43" alt="User"
                             class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;">

                        <span class="fw-semibold">
                            @if (currentUser != null)
                            {
                                <text>Admin: @currentUser.FullName</text>
                            }
                            else
                            {
                                <text>Admin</text>
                            }
                        </span>
                    </div>
                </a>
            </div>
        </div>

        <main role="main" class="pb-3">
            <div id="main-content">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @RenderBody()
            </div>
            
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
            document.addEventListener("DOMContentLoaded", function () {
                var toggleButton = document.getElementById("sidebarToggle");
                var sidebar = document.getElementById("sidebar");
                var content = document.getElementById("content");

                if (toggleButton && sidebar && content) {

                    var isCollapsed = localStorage.getItem("sidebar-collapsed") === "true";
                    if (isCollapsed) {
                        sidebar.classList.add("collapsed");
                        content.classList.add("collapsed");
                        document.documentElement.classList.add("sidebar-collapsed");
                    }

                    toggleButton.addEventListener("click", function () {
                        sidebar.classList.toggle("collapsed");
                        content.classList.toggle("collapsed");
                        document.documentElement.classList.toggle("sidebar-collapsed");
                        var collapsedNow = sidebar.classList.contains("collapsed");
                        localStorage.setItem("sidebar-collapsed", collapsedNow);
                    });
                }
                    });
    </script>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    
</body>
</html>