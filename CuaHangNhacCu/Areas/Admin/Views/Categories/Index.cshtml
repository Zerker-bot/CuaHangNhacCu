@model IEnumerable<CuaHangNhacCu.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between align-items-center mb-3 mt-2">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill me-2"></i>
        Tạo danh mục mới
    </a>

</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="m-0">Danh sách danh mục</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" style="width: 25%;">
                            Tên
                        </th>
                        <th scope="col" style="width: 45%;"> Mô tả</th>
                        <th scope="col" class=""</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td> @Html.DisplayFor(modelItem => item.Name)</td>
                            <td> @Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i> Chỉnh sửa</a>

                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="delete-form" style="display:inline">
                                    <button type="button" class="btn btn-sm btn-outline-danger ms-2" onclick="confirmDelete(this)">
                                        <i class="bi bi-trash"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmDelete(button) {
            Swal.fire({
                title: "Xác nhận xóa?",
                text: "Hành động này không thể hoàn tác!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Xóa",
                cancelButtonText: "Hủy",
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6"
            }).then((result) => {
                if (result.isConfirmed) {
                    button.closest('form').submit();
                }
            });
        }
    </script>
