@model CuaHangNhacCu.Models.Category

@{
    ViewData["Title"] = "Create";
}
<div class="d-flex justify-content-between align-items-center mb-3 mt-2">
    <h2 class="m-0">Tạo danh mục mới</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="m-0">Thông tin danh mục</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục" required />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="text-end">
                <a asp-action="Index" class="btn btn-secondary me-2">Hủy</a>
                <button type="submit" value="Create" class="btn btn-primary">Lưu danh mục</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
