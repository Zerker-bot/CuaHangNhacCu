@model CuaHangNhacCu.ViewModels.Profile.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

@section Styles {
    <link rel="stylesheet" href="~/css/customer/profile/index.css" />
}

<div class="container profile-section">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
            <div class="mb-3">
                <a asp-action="Index" class="text-decoration-none text-muted">
                    <i class="bi bi-arrow-left me-1"></i>Quay lại Hồ sơ
                </a>
            </div>

            <div class="profile-card">
                <div class="profile-card-header">
                    <i class="bi bi-shield-lock-fill me-2 text-warning"></i> Bảo mật tài khoản
                </div>
                <div class="profile-card-body">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label-custom"></label>
                            <input asp-for="OldPassword" class="form-control" placeholder="Nhập mật khẩu hiện tại" />
                            <span asp-validation-for="OldPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label-custom"></label>
                            <input asp-for="NewPassword" class="form-control" placeholder="Mật khẩu mới" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label-custom"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary fw-bold py-2">
                                Xác nhận đổi mật khẩu
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}