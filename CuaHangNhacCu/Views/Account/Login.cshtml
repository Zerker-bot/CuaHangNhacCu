@{
    ViewData["Title"] = "Đăng nhập - MusicMart";
}
@section Styles {
    <link href="~/css/customer/account/auth.css" rel="stylesheet" asp-append-version="true" />
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="auth-card">
                    <div class="auth-image text-center">
                        <img src="https://plus.unsplash.com/premium_photo-1669374470059-f7c87c1ae070?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=870" />
                    </div>

                    <div class="p-5">
                        <div class="text-center mb-4">
                            <h1 class="h3 fw-bold text-dark mb-2">Chào mừng trở lại</h1>
                            <p class="text-muted">Đăng nhập vào tài khoản của bạn</p>
                        </div>

                        <form method="post" asp-controller="Account" asp-action="Login">
                            @Html.AntiForgeryToken()
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-dark">Địa chỉ Email</label>
                                <input type="email" name="email" class="form-control" placeholder="your.email@example.com" required>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold text-dark">Mật khẩu</label>
                                <input type="password" name="password" class="form-control" placeholder="••••••••" required>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="remember">
                                    <label class="form-check-label text-muted" for="remember">Ghi nhớ tôi</label>
                                </div>
                                <a href="#" class="auth-link small">Quên mật khẩu?</a>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-gold btn-lg w-100 mb-4">
                                    <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                                </button>
                            </div>
                        </form>

                        <div class="text-center">
                            <p class="text-muted mb-0">
                                Bạn chưa có tài khoản?
                                <a asp-controller="Account" asp-action="Register" class="auth-link fw-semibold">Tạo tài khoản tại đây</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>