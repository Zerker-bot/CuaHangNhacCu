@using CuaHangNhacCu.ViewModels
@model RegisterViewModel 
@{
    ViewData["Title"] = "Tạo tài khoản - MusicMart";
}
@section Styles {
    <link href="~/css/customer/account/auth.css" rel="stylesheet" asp-append-version="true" />
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="auth-card">
                    <div class="auth-image text-center">
                      <img src="https://plus.unsplash.com/premium_photo-1669374470059-f7c87c1ae070?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=870" />
                    </div>

                    <div class="p-5">
                        <div class="text-center mb-4">
                            <h1 class="h3 fw-bold text-dark mb-2">Tham gia MusicMart</h1>
                            <p class="text-muted">Tạo tài khoản của bạn để truy cập các bộ sưu tập độc quyền</p>
                        </div>

                        <form method="post" asp-controller="Account" asp-action="Register">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="w-100 mb-4">
                                  <label class="form-label fw-semibold text-dark">Họ tên</label>
                                    <input type="text" name="fullname" class="form-control" placeholder="Họ và tên" required value="@Model?.FullName">
                                    <div class="text-danger" >@(Html.ValidationMessageFor(e => e.FullName))</div>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-dark">Địa chỉ Email</label>
                                <input type="email" name="email" class="form-control" placeholder="Địa chỉ Email" required value="@Model?.Email">
                                    <div class="text-danger" >@Html.ValidationMessageFor(e => e.Email)</div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-dark">Số điện thoại</label>
                                <input type="tel" name="phonenumber" class="form-control" placeholder="Số điện thoại" required value="@Model?.PhoneNumber">
                                    <div class="text-danger" >@Html.ValidationMessageFor(e => e.PhoneNumber)</div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                <label class="form-label fw-semibold text-dark">Mật khẩu</label>
                                    <input type="password" name="password" class="form-control" placeholder="Mật khẩu" required>
                                    <div class="text-danger" >@Html.ValidationMessageFor(e => e.Password)</div>
                                </div>
                                <div class="col-md-6 mb-4">
                                <label class="form-label fw-semibold text-dark">Nhập lại mật khẩu</label>
                                    <input type="password" name="confirmpassword" class="form-control" placeholder="Nhập lại mật khẩu" required>
                                    <div class="text-danger" >@Html.ValidationMessageFor(e => e.ConfirmPassword)</div>
                                </div>
                            </div>

                             @if (ViewBag.IdentityErrors != null)
                              {
                                  <ul class="text-danger">
                                      @foreach (var err in ViewBag.IdentityErrors)
                                      {
                                          <li>@err</li>
                                      }
                                  </ul>
                              }
                            <button type="submit" class="btn btn-gold btn-lg w-100">
                                <i class="fas fa-user-plus me-2"></i>Tạo tài khoản
                            </button>
                        </form>

                        <div class="divider mt-4">
                            <span>hoặc</span>
                        </div>

                        <div class="text-center">
                            <p class="text-muted mb-0">
                                Bạn đã có tài khoản?
                                <a asp-controller="Account" asp-action="Login" class="auth-link fw-semibold">Đăng nhập tại đây</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
