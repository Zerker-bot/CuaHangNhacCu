@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container text-center mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 80px;"></i>
            <h1 class="mt-3">Cảm ơn bạn đã đặt hàng!</h1>
            <p class="lead">
                Đơn hàng của bạn (Mã: <strong>#@ViewData["OrderId"]</strong>) đã được ghi nhận.
                Chúng tôi sẽ xử lý đơn hàng của bạn trong thời gian sớm nhất.
            </p>
            <hr />
            <div class="mt-4">
                <a asp-controller="OrderHistory" asp-action="Index" class="btn btn-primary btn-lg me-2">
                    Xem lịch sử mua hàng
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    Tiếp tục mua sắm
                </a>
            </div>
        </div>
    </div>
</div>