@model CuaHangNhacCu.ViewModels.OrderHistoryViewModel

@using CuaHangNhacCu.Models

@{
    ViewData["Title"] = "Lịch sử mua hàng ";
}
@section Styles {
    <link href="css/customer/orderHistory/index.css" rel="stylesheet">
}
<div class="container mt-5">
    <h1 class="mb-5"><i class="bi bi-bag"></i> Lịch sử mua hàng</h1>

    <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light rounded">
        <div>
            <form method="get" asp-action="Index" class="d-inline-block">
                <label for="statusFilter" class="form-label me-2 mb-0">Lọc đơn hàng:</label>
                <select asp-for="FilterStatus"
                        asp-items="Html.GetEnumSelectList<OrderStatus>()"
                        class="form-select w-auto d-inline-block form-select-sm"
                        onchange="this.form.submit()">
                    <option value="">Tất cả trạng thái</option>
                </select>
            </form>
        </div>
       
    </div>

    <div class="accordion" id="orderHistoryAccordion">
        @if (Model.Orders != null && Model.Orders.Any())
        {
            foreach (var order in Model.Orders)
            {
                string collapseId = $"collapseOrder{order.OrderId}";
                string statusClass = order.Status switch
                {
                    OrderStatus.Pending => "status-Pending",
                    OrderStatus.Delivered => "status-Delivered",
                    OrderStatus.Cancelled => "status-Cancelled",
                    OrderStatus.Processing => "status-Processing",
                    OrderStatus.Shipped => "status-Shipped",
                    OrderStatus.Returned => "status-Returned",
                    _ => "status-Pending"
                };
                string statusText = order.Status switch
                {
                    OrderStatus.Pending => "Chờ xử lý",
                    OrderStatus.Delivered => "Đã giao hàng",
                    OrderStatus.Cancelled => "Đã hủy",
                    OrderStatus.Processing => "Đang xử lý",
                    OrderStatus.Shipped => "Đang vận chuyển",
                    OrderStatus.Returned => "Đã hoàn/trả",
                    _ => order.Status.ToString()
                };
                <div class="card mb-3 border rounded shadow-sm">
                    <div class="order-card-header" id="heading-@order.OrderId">
                        <div class="row align-items-center" data-bs-toggle="collapse"
                             data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                            <div class="col-md-3">
                                <small class="text-muted">Mã Đơn hàng</small>
                                <h5 class="mb-0">#@order.OrderId</h5>
                            </div>
                            <div class="col-md-3">
                                <small class="text-muted">
                                    <i class="fas fa-calendar-alt me-1"></i> Ngày đặt
                                </small>
                                <p class="mb-0">@order.CreatedAt.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="col-md-3">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i> Trạng thái
                                </small>
                                <span class="status-badge @statusClass">@statusText</span>
                            </div>
                            <div class="col-md-3 text-end">
                                <small class="text-muted">Tổng cộng</small>
                                <p class="order-total-amount mb-0">@order.Total.ToString("N0") VNĐ</p>
                            </div>
                        </div>

                        <!-- Thanh Hành động -->
                        <div class="mt-3 pt-2 border-top">
                            @if (order.Status == OrderStatus.Pending)
                            {
                                <form asp-action="CancelOrder" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@order.OrderId" />
                                    <button type="button" class="btn btn-sm btn-danger me-2" onclick="confirmDelete(this)">
                                        <i class="fas fa-times-circle"></i> Hủy Đơn hàng
                                    </button>
                                </form>
                            }
                            <button class="btn btn-sm btn-outline-secondary" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#@collapseId">
                                <i class="fas fa-chevron-down"></i> Chi tiết
                            </button>
                        </div>
                    </div>

                    <!-- Khu vực chi tiết -->
                    <div id="@collapseId" class="collapse" data-bs-parent="#orderHistoryAccordion">
                        <div class="card-body details-section p-4">
                            <h6><i class="bi bi-file-text"></i> Chi tiết các mặt hàng đã đặt</h6>
                            <ul class="list-group list-group-flush mb-4">
                                @foreach (var item in order.Items)
                                {
                                    <li class="list-group-item p-0">
                                        <div class="d-flex align-items-center">
                                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.ProductId"
                                               class="text-dark product-item text-dark text-decoration-none d-flex justify-content-between align-items-center w-100">
                                                <strong>@item.ProductName</strong>
                                                <span class="badge bg-secondary ms-2 text-center">@item.Quantity</span>
                                                <span class="ms-auto">@item.UnitPrice.ToString("N0") VNĐ</span>
                                            </a>
                                        </div>
                                      
                                    </li>
                                }
                            </ul>

                            <h6><i class="bi bi-wallet"></i> Tổng tiền</h6>
                            <div class="row">
                                <div class="col-6">Tổng giá trị sản phẩm:</div>
                                <div class="col-6 text-end">
                                    @order.Items.Sum(i => i.UnitPrice * i.Quantity).ToString("N0") VNĐ
                                </div>
                                <div class="col-6">Phí vận chuyển:</div>
                                <div class="col-6 text-end text-muted">+ @order.ShippingFee.ToString("N0") VNĐ</div>
                                <div class="col-6 text-danger">Chiết khấu:</div>
                                <div class="col-6 text-end text-danger">- @order.Discount.ToString("N0") VNĐ</div>
                                <div class="col-12"><hr class="my-2"></div>
                                <div class="col-6 fw-bold">TỔNG CỘNG:</div>
                                <div class="col-6 text-end fw-bold text-success">@order.Total.ToString("N0") VNĐ</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center">
                Bạn chưa có đơn hàng nào.
            </div>
        }
        @{
            var message = TempData["Message"] as string;
            if (!string.IsNullOrEmpty(message))
            {
                <script>
                    Swal.fire({
                        title: "Thông báo",
                        text: "@message",
                        icon: "success", // Hoặc "info", tùy thuộc vào thông báo của bạn
                        confirmButtonColor: "#3085d6",
                        confirmButtonText: "OK"
                    });
                </script>
            }
        }
    </div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(button) {
            Swal.fire({
                title: "Xác nhận hủy đơn hàng?",
                text: "Hành động này không thể hoàn tác!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Hủy",
                cancelButtonText: "Quay lại",
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6"
            }).then((result) => {
                if (result.isConfirmed) {
                    button.closest('form').submit();
                }
            });
        }
    </script>

