@using Microsoft.AspNetCore.Identity
@using CuaHangNhacCu.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var fullName = user?.FullName ?? User.Identity?.Name ?? "Khách hàng";
    var avatarUrl = "https://avatar.iran.liara.run/public/43"; 

    <li class="nav-item me-3">
        <a class="nav-link text-dark position-relative" asp-area="" asp-controller="Cart" asp-action="Index" title="Giỏ hàng">
            <i class="bi bi-cart3 fs-5"></i> 
            <span class="d-none d-xl-inline ms-1">Giỏ hàng</span>
        </a>
    </li>

    <li class="nav-item me-3">
        <a class="nav-link text-dark" asp-area="" asp-controller="OrderHistory" asp-action="Index" title="Lịch sử mua hàng">
            <i class="bi bi-clock-history fs-5"></i>
            <span class="d-none d-xl-inline ms-1">Lịch sử</span>
        </a>
    </li>

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark d-flex align-items-center p-0" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="me-2 d-none d-lg-inline fw-bold">@fullName</span>
            <img src="@avatarUrl" alt="Avatar" class="rounded-circle border shadow-sm" style="width: 38px; height: 38px; object-fit: cover;">
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2" aria-labelledby="navbarDropdown">
            <li>
                <div class="dropdown-header text-muted">Tài khoản của tôi</div>
            </li>
            <li>
                <a class="dropdown-item py-2" asp-area="" asp-controller="Profile" asp-action="Index">
                    <i class="bi bi-person-circle me-2 text-primary"></i>Hồ sơ cá nhân
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item py-2 text-danger">
                        <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item me-2">
        <a class="btn btn-outline-primary rounded-pill px-4" asp-controller="Account" asp-action="Register">Đăng ký</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-primary rounded-pill px-4" asp-controller="Account" asp-action="Login">Đăng nhập</a>
    </li>
}
</ul>
