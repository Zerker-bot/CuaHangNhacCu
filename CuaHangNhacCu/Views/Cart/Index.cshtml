@model CuaHangNhacCu.ViewModels.Cart.CartViewModel
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
}

@section Styles {
    <link rel="stylesheet" href="~/css/customer/Cart/index.css" />
    <link rel="stylesheet" href="~/css/customer/product/detail.css" />
}

<h1 class="fw-bold text-center">@ViewData["Title"]</h1>

@if (!Model.Items.Any())
{
    <div class="alert alert-info text-center p-5" role="alert">
        <i class="bi bi-cart-x fs-1 text-muted"></i>
        <p class="mt-3 fs-5">Giỏ hàng của bạn đang trống.</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-2">Tiếp tục mua sắm</a>
    </div>
}
else
{
    @Html.AntiForgeryToken()

    <form asp-controller="Cart" asp-action="PrepareCheckout" method="post" id="cart-form">

        <div class="table-responsive mb-5">
            <table class="table align-middle hover-shadow-sm">
                <thead class="bg-light">
                    <tr>
                        <th style="width: 5%;"></th>
                        <th colspan="2" style="width: 40%;">Sản phẩm</th>
                        <th style="width: 15%;">Đơn giá</th>
                        <th style="width: 15%;">Số lượng</th>
                        <th style="width: 15%;">Thành tiền</th>
                        <th style="width: 10%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr class="cart-item-row" id="row-@item.CartItemId">
                            <td>
                                <div class="d-flex align-items-center justify-content-center">
                                    <input type="checkbox" name="selectedItems" value="@item.CartItemId"
                                           class="form-check-input select-item" style="cursor: pointer; transform: scale(1.2);"
                                           data-price="@item.TotalItemPrice" />
                                </div>
                            </td>
                            <td>
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.ProductId">
                                    <img src="@item.ProductImageUrl" alt="@item.ProductName" class="cart-product-img border rounded" />
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.ProductId" class="text-decoration-none text-dark fw-semibold">
                                    @item.ProductName
                                </a>
                            </td>
                            <td class="text-muted">@item.UnitPrice.ToString("N0") VNĐ</td>
                            <td>
                                <div class="input-group input-group-sm" style="width: 110px;">
                                    <button class="btn btn-outline-secondary quantity-btn" data-type="minus" data-item-id="@item.CartItemId" type="button"><i class="bi bi-dash"></i></button>
                                    <input type="number" class="form-control text-center border-secondary quantity-input" value="@item.Quantity" min="1"
                                           data-item-id="@item.CartItemId" data-unit-price="@item.UnitPrice" readonly>
                                    <button class="btn btn-outline-secondary quantity-btn" data-type="plus" data-item-id="@item.CartItemId" type="button"><i class="bi bi-plus"></i></button>
                                </div>
                            </td>
                            <td class="fw-bold text-dark item-total-price">@item.TotalItemPrice.ToString("N0") VNĐ</td>
                            <td class="text-center">
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        onclick="confirmRemove(event, '@Url.Action("Remove", "Cart", new { id = item.CartItemId })')">
                                    <i class="bi bi-trash"></i> Xóa
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="cart-checkout-bar shadow-lg">
            <div class="form-check ms-3">
                <input class="form-check-input" type="checkbox" id="select-all" style="cursor: pointer; transform: scale(1.2);" />
                <label class="form-check-label ms-2 fw-semibold user-select-none" for="select-all" style="cursor: pointer;">
                    Chọn tất cả (@Model.Items.Count)
                </label>
            </div>

            <div class="d-flex align-items-center gap-4">
                <div class="total-price-group text-end">
                    <span class="text-muted small d-block">Tổng thanh toán:</span>
                    <span class="total-price-display text-danger fw-bold fs-4" id="selected-total">0 VNĐ</span>
                </div>

                <div class="checkout-button-group me-3">
                    <button type="submit" class="btn btn-gold text-dark fw-bold px-5 py-2 rounded-pill" id="btn-checkout" disabled>
                        Mua hàng
                    </button>
                </div>
            </div>
        </div>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/cart.js" asp-append-version="true"></script>
}